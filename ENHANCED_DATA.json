      {
        "layer": 2,
        "name": "Liquidity Density",
        "focus": "Microstructural Analysis",
        "core_principle": "Never enter where liquidity is thin; identify stop-loss clusters",
        "metrics": [
          {
            "name": "VWAP Position",
            "calculation": "(Price - VWAP) / VWAP_STD",
            "threshold": "Within ±0.5σ = fair entry"
          },
          {
            "name": "Liquidity Pool Depth",
            "calculation": "Order book depth ±2% from mid",
            "threshold_btc": ">$5M",
            "threshold_alts": ">$1M"
          },
          {
            "name": "Resistance-to-Support Ratio",
            "interpretation": "R/S < 5 = healthy; R/S > 20 = trap"
          }
        ],
        "critical_rule": "If Liquidity_Score < 0.4, DO NOT ENTER"
      },
      {
        "layer": 3,
        "name": "Correlation Velocity",
        "focus": "Macro Environmental Check",
        "core_principle": "Identify when assets decouple from traditional markets for alpha",
        "metrics": [
          {
            "name": "BTC-SPX Correlation",
            "lookback": "30-day",
            "interpretation": ">0.7 = risk-on macro asset; <0.3 = crypto-specific move"
          },
          {
            "name": "BTC-DXY Correlation",
            "lookback": "30-day",
            "interpretation": "<-0.6 = inflation hedge mode"
          },
          {
            "name": "Beta to BTC",
            "lookback": "90-day",
            "interpretation": ">1.5 = high beta alt; <0.8 = defensive"
          }
        ],
        "special_signal": {
          "name": "Momentum Inversion",
          "condition": "Google_Trends_velocity > 2σ AND Price_change_24h < 5%",
          "signal": "STRONG BUY (pump pending)"
        }
      },
      {
        "layer": 4,
        "name": "Sentiment & Social Velocity",
        "focus": "Noise Analysis",
        "core_principle": "Look for divergence between price and sentiment",
        "metrics": [
          {
            "name": "Fear & Greed Index",
            "source": "Alternative.me",
            "weight_btc": 0.20,
            "weight_eth": 0.15
          },
          {
            "name": "Social Volume",
            "source": "LunarCrush API",
            "weight_memes": 0.40,
            "weight_all": 0.10
          },
          {
            "name": "Funding Rate",
            "source": "Binance Futures",
            "weight_btc": 0.25,
            "weight_eth": 0.25
          }
        ],
        "divergence_detection": {
          "bullish": "Price ↓, Sentiment ↑ (accumulation)",
          "bearish": "Price ↑, Sentiment ↓ (distribution)"
        }
      }
    ],
    "scoring_system": {
      "formula": "HAG_Score = Σ(Layer_i × Weight_i)",
      "weights_by_asset": {
