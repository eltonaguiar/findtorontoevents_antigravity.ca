            "name": "Exchange Outflow Spike",
            "signal": "Accumulation phase (bullish)",
            "weight_btc": 0.35,
            "weight_eth": 0.30,
            "weight_avax": 0.25
          },
          {
            "name": "Exchange Inflow Spike",
            "signal": "Distribution/panic selling (bearish)",
            "weight_all": 0.40
          },
          {
            "name": "Active Address Growth",
            "signal": "Network adoption acceleration",
            "weight_btc": 0.20,
            "weight_eth": 0.25,
            "weight_avax": 0.30
          },
          {
            "name": "Whale Accumulation Pattern",
            "signal": ">5% wallet buying while flat",
            "weight_memes": 0.50,
            "weight_all": 0.15
          }
        ],
        "entry_rule": "OnChain_Score > 0.75 AND Exchange Outflow > 2σ = STRONG BUY"
