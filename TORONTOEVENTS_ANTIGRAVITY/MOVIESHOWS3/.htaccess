# Case-insensitive URL handling for MOVIESHOWS3
# Redirect /movieshows3 to /MOVIESHOWS3

RewriteEngine On
RewriteBase /

# Set default index file
DirectoryIndex index.html

# Redirect lowercase movieshows3 to uppercase MOVIESHOWS3
RewriteCond %{REQUEST_URI} ^/movieshows3(/.*)?$ [NC]
RewriteRule ^movieshows3(/.*)?$ /MOVIESHOWS3$1 [R=301,L]

# Allow access to all files
<FilesMatch "\.(html|php|js|css|jpg|jpeg|png|gif|ico|woff|woff2|ttf|svg)$">
    Order allow,deny
    Allow from all
</FilesMatch>
